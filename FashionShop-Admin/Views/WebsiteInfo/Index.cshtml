@model FashionShop.Models.views.WebsiteViewModel.WebsiteViewModel
@using System.Web
@{
    ViewData["Title"] = "Website Information";
}

@section Styles

{
    <link rel="stylesheet" href="~/plugin/datatables/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/plugin/datatables/dataTables.bootstrap5.min.css">
    <style>
        .p-text p {
            margin-bottom: 0;
        }

        .custom-option option {
            padding-right: 8px;
        }
    </style>
}

@section Scripts

{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/template.js"></script>
    <script>
        $("#LogoFile").on("change", function (event) {
            var file = event.target.files[0];
            $("#reviewAvatar").attr("src", URL.createObjectURL(file));
        })
    </script>
    <script>
        $("#Address").val("@Model.WebsiteInfo["address"]");
      var test = $("#Description").val("@Html.Raw(HttpUtility.HtmlDecode(Model.WebsiteInfo["description"]))");
      console.log(test);
    </script>
}

<!-- Body: Body -->
<div class="body d-flex py-3">
    <div class="container-xxl">
        <div class="row align-items-center">
            <div class="border-0 mb-4">
                <div
                    class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
                    <h3 class="fw-bold mb-0">Website Information</h3>
                </div>
            </div>
        </div> <!-- Row end  -->
        <div class="row g-3">
            <div class="col-xl-4 col-lg-5 col-md-12">
                <div class="card profile-card flex-column mb-3">
                    <div class="card-header py-3 d-flex justify-content-between bg-transparent border-bottom-0">
                        <h6 class="mb-0 fw-bold ">Webiste Information</h6>
                    </div>
                    <div class="card-body d-flex profile-fulldeatil flex-column">
                        <div class="profile-block text-center w220 mx-auto">
                            <a href="#">
                                <img src="@Url.Content("uploaded/")@Model.WebsiteInfo["logo"]" alt="@Model.WebsiteInfo["name"]"
                                     class="avatar xl rounded img-thumbnail shadow-sm">
                            </a>
                        </div>
                        <div class="profile-info w-100">
                            <h6 class="mb-0 mt-2  fw-bold d-block fs-6 text-center">@Model.WebsiteInfo["name"]</h6>
                            <p class="mt-2">@Model.WebsiteInfo["description"]</p>
                            <div class="row g-2 pt-2">
                                <div class="col-xl-12">
                                    <div class="d-flex align-items-center">
                                        <i class="icofont-ui-touch-phone"></i>
                                        <span class="ms-2">@Model.WebsiteInfo["phone"]</span>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="d-flex align-items-center">
                                        <i class="icofont-email"></i>
                                        <span class="ms-2">@Model.WebsiteInfo["email"]</span>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="d-flex align-items-center">
                                        <i class="icofont-address-book"></i>
                                        <span class="ms-2">@Model.WebsiteInfo["address"]</span>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="d-flex align-items-center">
                                        <i class="icofont-police"></i>
                                        <span class="ms-2">@Model.WebsiteInfo["footer"]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8 col-lg-7 col-md-12">
                <div class="card mb-3">
                    <div class="card-header py-3 d-flex justify-content-between bg-transparent border-bottom-0">
                        <h6 class="mb-0 fw-bold ">Webiste Settings</h6>
                    </div>
                    <div class="card-body">
                        <form class="row g-4" asp-action="Index"  method="post" enctype="multipart/form-data">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">Website Name</label>
                                    <input class="form-control" type="text" asp-for="SiteName" value="@Model.WebsiteInfo["name"]">
                                    <span asp-validation-for="SiteName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="form-label" for="Phone">Website Phone </label>
                                    <input class="form-control" type="text" asp-for="Phone" id="Phone"
                                           value="@Model.WebsiteInfo["phone"]">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label" for="Address">Website Address</label>
                                    <textarea class="form-control" asp-for="Address" id="Address" value="@Model.WebsiteInfo["address"]">@Model.WebsiteInfo["address"]</textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="form-label" for="Email">Website Email</label>
                                    <input class="form-control" type="email" asp-for="Email" id="Email" value="@Model.WebsiteInfo["email"]">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="form-label" for="Footer">Website Footer</label>
                                    <input class="form-control" type="text" asp-for="Footer" id="Footer"
                                           value="@Model.WebsiteInfo["footer"]">
                                    <span asp-validation-for="Footer" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label" for="Description">Website Description</label>
                                    <textarea class="form-control" aria-label="With textarea" asp-for="Description" id="Description">@Model.WebsiteInfo["description"]</textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="form-group">
                                    <label class="form-label" for="LogoFile">Change Logo</label>
                                    <input type="file" asp-for="LogoFile" id="LogoFile" class="form-control" value="@Model.WebsiteInfo["logo"]">
                                    <span asp-validation-for="LogoFile" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-7">
                                <div class="d-flex justify-content-center align-items-center">
                                    <img src="@Model.WebsiteInfo["logo"]" alt="@Model.WebsiteInfo["name"]"
                                         id="reviewAvatar" width="160" height="160">
                                </div>
                            </div>
                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-primary text-uppercase px-5">SAVE</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>